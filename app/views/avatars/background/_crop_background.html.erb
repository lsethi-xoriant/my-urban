<%= form_for @avatar, url: {controller: 'avatars', action:'background_update', id: @avatar.id}, remote: true  do |f| %>
  <%= hidden_field_tag :user_page, 'crop_page'%>
  <%= f.hidden_field :name, value: 'background'%>
  <%= f.cropbox :avatar, version: :background_base %>
  <%= f.submit 'Crop', class:"avatar-crop-btn background_for_crop" %>
<%end%>
<script>
    $('#avatar_avatar_cropbox').Jcrop({
      aspectRatio: 2.057,
      setSelect: [0, 0, 360, 175],
      onSelect: this.update,
      onChange: this.update
    });
    function update (coords) {
      $('#avatar_avatar_crop_x').val(coords.x);
      $('#avatar_avatar_crop_y').val(coords.y);
      $('#avatar_avatar_crop_w').val(coords.w);
      $('#avatar_avatar_crop_h').val(coords.h);
    };



</script>