<%elsif @user_page == 'edit_user'%>
  $('#avatar_edit').html("<%= escape_javascript render('crop_avatar') %>");
  $(".upload-img").spin(false);
  $('#AvatarModal').foundation('reveal', 'open');

  $('.avatar-crop-btn').click(function(){
    $('#AvatarModal').foundation('reveal', 'close');
  });
<%end%>