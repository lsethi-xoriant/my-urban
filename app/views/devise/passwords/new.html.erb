<div class="fog_bg">
	<%= render "partials/header" %>
	<div class="row">
		<div class="large-12 medium-12 small-12 columns padding_n">
			<div class="content registration-wrapper">				
				<div class="row">
					<a class="back back_ml_erb" href="/">Назад</a>
					<div class="form-wrapper pass_fog">
						<h2>Забули пароль?</h2>
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
						  <%= devise_error_messages! %>

						  <div class="field">
						    <%= f.label :email %>
						    <%= f.email_field :email, autofocus: true %>
						  </div>

						  <div class="actions fog_pass_button">
						    <%= f.submit "Відіслати пароль на пошту" %>
						  </div>
						<% end %>	
					</div>
				</div>	
				<div class="link_erb">
					<%= link_to "Реєстрація", new_registration_path(resource_name), class:"registration_erb" %>
					<%= link_to "Вхід", new_session_path(resource_name), class:"enter_erb" %>
				</div>		
			</div>			
		</div>
	</div>
</div>