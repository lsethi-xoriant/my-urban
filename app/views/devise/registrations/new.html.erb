<h2>Sign up</h2>

<%= render "devise/shared/links" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Ім'я*" %><br />
    <%= f.text_field :first_name, :autofocus => true %>
  </div>
  
  <div class="field">
    <%= f.label "Прізвище*" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label "email*" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label "пароль*" %>
    <% if @validatable %>
    <em>(мін <%= @minimum_password_length %> символів)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "підтвердження паролю*" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Коротко про себе" %><br />
    <%= f.text_area :about_user, rows: 5 %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватись" %>
  </div>
<% end %>


