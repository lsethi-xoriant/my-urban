<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.collection_select(
    :category_id, 
    Category.all, 
    :id, 
    :title, 
    :prompt => "Select a category") %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :adress %><br>
    <%= f.text_field :adress %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :data %><br>
    <%= f.date_select :data, 
    {:use_month_names => ['Січень', 'Лютий', 'Березень', 'Квітень', 'Травень', 'Червень', 'Липень', 'Серпень', 'Вересень', 'Жовтень', 'Листопад','Грудень']}  %>
  </div>
  <div class="field">
    <%= f.label :timeStart %><br>
    <%= f.time_select :timeStart, :minute_step => 5, 
    prompt: {hour: 'Choose hour', minute: 'Choose minute'} %>
  </div>
  <div class="field">
    <%= f.label :endTime %><br>
    <%= f.time_select :endTime, :minute_step => 5, 
    prompt: {hour: 'Choose hour', minute: 'Choose minute'} %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.text_field :photo %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br>
    <%= f.select :event_type, Event.types_of_event %>
  </div>
  <div class="field">
    <%= f.label :people_count %><br>
    <%= f.select :people_count, Event.counts_of_people %>
  </div>
  <div class="field">
    <%= f.label :reg_type %><br>
    <%= f.select :reg_type, Event.replenishment %>
  </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
  

  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
