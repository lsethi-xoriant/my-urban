$("#comment_body").val('');
<%if @last_comment %>
  $("#comment_id_<%=@last_comment.id%>").before("<%= escape_javascript render(partial: 'events/comments/comment', locals: {comment: @comment}) %>")
<%else%>
  $(".comments_block").html("<%= escape_javascript render(partial: 'events/comments/comment', locals: {comment: @comment}) %>")
<%end%>