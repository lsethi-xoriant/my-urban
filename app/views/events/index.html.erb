<div><h1>Ви в проекті my-urban</h1></div>




<div><% if user_signed_in? %>
    <span>Вітаю, <%= current_user.first_name + ' ' + current_user.last_name %></span>
    <%= link_to 'Вийти', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Вхід', new_user_session_path %> або <%= link_to 'Реєстрація', new_user_registration_path %>
<% end %></div>
</br>

<% if can? :create, Category %>
<%= link_to 'Категорії', categories_path %>
<% end %></br>

<h1>Список подій</h1>

<% if Event.exists? %>
<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Хто створив</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
   
    <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
    <% end %>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <% @user =  User.find_by_id(event.user_id) %>
        <td><%= @user.last_name + ' ' + 
            @user.first_name %></td>        
        

        <% if can? :read, Event %>
        <td><%= link_to 'Show', event %></td>
        <% end %>
        
        <% if can? :manage, Event %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= form_tag(@event, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Event by date" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
</br>
<% end %>

<h1>Список моїх подій</h1>
<table>
  <thead>
    <tr>
      <th>Event name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
   
    <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
    <% end %>

  <tbody>
    <%if user_signed_in?%>
      <% current_user.events.each do |event| %>
        <tr>
          <td><%= event.name %></td>    
          

          <% if can? :read, Event %>
          <td><%= link_to 'Show', event %></td>
          <% end %>
          
          <% if can? :manage, Event %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Invite user to event',invite_path(:event_id => event.id) %></td>
      
          <% end %>
        </tr>
      <% end %>
    <%end%>
  </tbody>
</table>

