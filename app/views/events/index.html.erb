<div><h1>Ви в проекті my-urban</h1></div>




<div><% if user_signed_in? %>
    <span>Вітаю, <%= current_user.first_name %> <%= current_user.last_name %></span>
    <%= link_to 'Вийти', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Вхід', new_user_session_path %> або <%= link_to 'Реєстрація', new_user_registration_path %>
<% end %></div>
</br>

<h1>Список подій</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Хто створив</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
   
    <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
    <% end %>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= User.find_by_id(event.user_id).last_name + ' ' + 
            User.find_by_id(event.user_id).first_name %></td>
        
        <td><%= event.category_id %></td>
        
        

        <% if can? :read, Event %>
        <td><%= link_to 'Show', event %></td>
        <% end %>
        
        <% if can? :manage, Event %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= form_tag(@event, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Event by date" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
</br>

<% if user_signed_in? %>
<%= link_to 'Створити подію', new_event_path %>
<% end %>



