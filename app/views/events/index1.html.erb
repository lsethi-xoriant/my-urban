<%= @m %>

<h1>Список подій</h1>

<% if Event.exists? %>
<table id="events">
  <thead>
    <tr>
      <th>Event name</th>
      <th>Хто створив</th>
      <th>Учасники</th>
      <th>max Учасників</th>
      <th>Година</th>
      <th>Дата</th>
      <th colspan="6"></th>
    </tr>
  </thead>
   
    <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
    <% end %>

  <tbody class="page">
    <%= render @events %>
  </tbody>
</table>

<div id="scroll" style="display: none;">
<%= paginate @events, :remote => true %>
</div>
</br>

<%= form_tag(@event, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Event by title" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
</br>
<% end %>

<h1>Список моїх подій</h1>
<table>
  <thead>
    <tr>
      <th>Event name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
   
    <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
    <% end %>

  <tbody>
    <%if user_signed_in?%>
      <% current_user.events.each do |event| %>
        <tr>
          <td><h1><%= event.name %></h1></td>    
          

          <% if can? :read, Event %>
          <td><%= link_to 'Show', event %></td>
          <% end %>
          
          <% if can? :manage, Event %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Invite user to event',invite_path(:event_id => event.id) %></td>
      
          <% end %>
        </tr>
      <% end %>
    <%end%>
  </tbody>
</table>

<% if can? :create, Event %>
<%= link_to 'Створити подію', new_event_path %>
<% end %>



