h1
  | Список подій
- if Event.exists?
  table#events
    thead
      tr
        th
          | Event name
        th
          | Хто створив
        th
          | Учасники
        th
          | max Учасників
        th
          | Година
        th
          | Дата
        th[colspan="6"]
    - if flash[:alert]
      .notice
        = flash[:alert]
    tbody.page
      = render @events
  #scroll[style="display: none;"]
    = paginate @events, :remote => true
  = form_tag(@event, :method => "get", id: "search-form") do
    = text_field_tag :search, params[:search], placeholder: "Search Event by title"
    = submit_tag "Search", :name => nil
h1
  | Список моїх подій
table
  thead
    tr
      th
        | Event name
      th[colspan="3"]
  - if flash[:alert]
    .notice
      = flash[:alert]
  tbody
    - if user_signed_in?
      - current_user.events.each do |event|
        tr
          td
            h1
              = event.name
          - if can? :read, Event
            td
              = link_to 'Show', event
          - if can? :manage, Event
            td
              = link_to 'Edit', edit_event_path(event)
            td
              = link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
            td
              = link_to 'Invite user to event',invite_path(:event_id => event.id)
- if can? :create, Event
  = link_to 'Створити подію', new_event_path
