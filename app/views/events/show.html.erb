<p id="notice"><%= notice %></p>

<p>
<strong>Категорія:</strong>
<%= Category.find_by_id(@event.category_id).title %>
</p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Adress:</strong>
  <%= @event.adress %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Data:</strong>
  <%= @event.data %>
</p>

<p>
  <strong>Timestart:</strong>
  <%= @event.timeStart %>
</p>

<p>
  <strong>Endtime:</strong>
  <%= @event.endTime %>
</p>

<p>
  <strong>Photo:</strong>
  <%= @event.photo %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
<% if confirm_ability(@event) == 'can'%>
  <%if @p.count == 1%>
    <p>Status: <%=@p.first.status%></p>
    Change your mind
  <%end%>
  <%= simple_form_for @plan do |f| %>
    <%= f.hidden_field :measure_id,  value: @event.id %>
    <%if current_user.comming(@plan.measure_id)%>
      <%= f.submit 'Not_Comming', name: 'not_comming'%>
    <%elsif !current_user.comming(@plan.measure_id)%>
    <!--
    <%= f.submit 'Maybe', name: 'maybe'%>
    -->
    <%= f.submit 'Comming', name: 'comming'%>
    <%end%>
  <%end%>
<%elsif confirm_ability(@event) == 'not_friend'%>
  <p>This event are close, you aren't friend</p>
<%elsif confirm_ability(@event) == 'not_user'%>
  <p>Sign in or Sign up</p>
<% end %>